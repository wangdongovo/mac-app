{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/renderer/src/*"],
      "@common/*": ["src/common/*"]
    }
  },
  "include": [
    "src/**/*",
    "forge.env.d.ts",
    "vite.renderer.config.ts",
    "vite.main.config.ts",
    "vite.preload.config.ts"
  ]
}